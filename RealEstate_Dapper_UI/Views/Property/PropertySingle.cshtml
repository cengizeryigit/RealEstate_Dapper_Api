@model dynamic
@{
    ViewData["Title"] = "PropertySingle";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Default/Index/">Anasayfa</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlanlar</li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlan Detayları</li>
        </ul>
    </div>
</section>
<!--/blog-post-->
<section class="w3l-blog post-content py-5">
    <div class="container py-lg-4 py-md-3 py-2">
        <div class="inner mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <div class="listing-category"><span>@Model.values.type</span></div>
                </li>
                <li><span class="fa fa-clock-o"></span> @( (DateTime.Now - Model.values.AdvertisementDate).Days ) gün önce</li>
                <li><span class="fa fa-eye"></span> 250 Görüntülenme</li>
            </ul>
        </div>
        <div class="post-content">
            <h2 class="title-single"> @Model.values.title</h2>
        </div>
        <div class="blo-singl mb-4">
            <ul class="blog-single-author-date align-items-center">
                <li>
                    <p>@Model.values.address  @Model.values.district  /  @Model.values.city</p>
                </li>
                <li><span class="fa fa-bed"></span> @Model.details.BedroomCount Yatak Odası</li>
                <li><span class="fa fa-bath"></span> @Model.details.BathCount Banyo</li>
                <li><span class="fa fa-share-square-o"></span> @Model.details.ProductSize m2</li>
            </ul>
            <ul class="share-post">
                <a href="#url" class="cost-estate m-o">₺ @Model.values.price</a>
            </ul>
        </div>

        <div class="row">
            <div class="col-lg-8 w3l-news">
                <div class="blog-single-post">
                    <div class="single-post-image mb-5">
                        <div class="owl-blog owl-carousel owl-theme">
                            @foreach (var item in Model.images)
                            {
                                <div class="item">
                                    <div class="card">
                                        <img src="@item.ImageUrl" class="img-fluid radius-image" alt="image">
                                    </div>
                                </div>
                            }
                           

                        </div>
                    </div>

                    <div class="single-post-content">
                        <h3 class="post-content-title mb-3">İan Açıklaması</h3>
                        <p class="mb-4">
                            @Model.values.description
                        </p>
                        <div class="single-bg-white">
                            <h3 class="post-content-title mb-4">İlan Detayları</h3>
                            <ul class="details-list">
                                <li><strong>İlan Id :</strong> @Model.values.productID </li>
                                <li><strong>Metrekare :</strong> @Model.details.ProductSize m2 </li>
                                <li><strong>Oda Sayısı :</strong> @Model.details.RoomCount </li>
                                <li><strong>Yatak Odası :</strong> @Model.details.BedroomCount </li>
                                <li><strong>Banyo Sayısı :</strong> @Model.details.BathCount </li>
                                <li><strong>Exterior material :</strong> Brick </li>
                                <li><strong>Yapı Türü :</strong> Beton </li>
                                <li><strong>Garaj Sayısı :</strong> @Model.details.GarageSize </li>
                                <li><strong>Garaj :</strong> @Model.details.GarageSize </li>
                                <li><strong>Fiyat :</strong> ₺ @Model.values.price </li>
                                <li><strong>Yapım Yılı :</strong> @Model.details.BuildYear </li>
                                <li><strong>İlan Tarihi :</strong> @Model.values.AdvertisementDate.ToString("dd-MMM-yyyy") </li>
                            </ul>
                        </div>
                        <div class="single-bg-white">
                            <h3 class="post-content-title mb-4">Özellikler</h3>
                            <ul class="details-list">
                                 @if (Model?.amenity != null)
                                 {
                                     foreach (var item in Model.amenity)
                                     {
                                         <li><strong>@item.Title</strong></li>
                                     }
                                 }
                                 else
                                 {
                                     <li>Özellik bulunamadı.</li> <!-- İsteğe bağlı: boş liste mesajı -->
                                 }
                            </ul>
                        </div>
                    </div>

                    <div class="single-bg-white">
                        <h3 class="post-content-title mb-4">Lokasyon</h3>
                        <div class="agent-map">
                            <iframe src="@Model.details.Location"
                                    frameborder="0" style="border:0" allowfullscreen=""></iframe>

                      

                        </div>
                    </div>

                    <div class="single-bg-white mb-0">
                        <h3 class="post-content-title mb-4">Tanıtım Videosu</h3>
                        <div class="post-content">
                            <iframe src="@Model.details.VideoUrl" frameborder="0"
                                    allowfullscreen=""></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sidebar-side col-lg-4 col-md-12 col-sm-12 mt-lg-0 mt-5">
                <aside class="sidebar">

                    <!-- Popular Post Widget-->
                    <div class="sidebar-widget popular-posts">
                        <div class="sidebar-title">
                            <h4>Eklakçı İletişim Bilgileri</h4>
                        </div>

                        <article class="post">
                            <figure class="post-thumb">
                                <img src="@Model.user.UserImageUrl" style="height:100px; width:100px;" class="radius-image" alt="">
                            </figure>
                            <div class="text mb-0">
                                <a href="#blog-single">
                                    @Model.user.Name
                                </a>
                                <div class="post-info">@Model.user.PhoneNumber</div>
                                <div class="post-info">@Model.user.Email</div>
                            </div>
                        </article>
                        <button type="submit" class="btn btn-primary btn-style w-100">Detaylı İletişim Bilgileri</button>
                    </div>


                    <!-- Popular Post Widget-->
                    <div class="sidebar-widget popular-posts">
                        <div class="sidebar-title">
                            <h4>Emlakçıya ait diğer ilanlar</h4>
                        </div>

                        <article class="post">
                            <figure class="post-thumb">
                                <img src="~/starter/assets/images/l1.jpg" class="radius-image" alt="">
                            </figure>
                            <div class="text">
                                <a href="#blog-single">
                                    Why we are the best in the business
                                </a>
                                <div class="post-info">Sep 09, 2020 - 2 comments</div>
                            </div>
                        </article>

                        <article class="post">
                            <figure class="post-thumb">
                                <img src="~/starter/assets/images/l2.jpg" class="radius-image" alt="">
                            </figure>
                            <div class="text">
                                <a href="#blog-single">
                                    Build your next landing page.
                                </a>
                                <div class="post-info">Sep 09, 2020 - 2 comments</div>
                            </div>
                        </article>

                        <article class="post">
                            <figure class="post-thumb">
                                <img src="~/starter/assets/images/l3.jpg" class="radius-image" alt="">
                            </figure>
                            <div class="text">
                                <a href="#blog-single">

                                    Simply the best. Better than the rest.
                                </a>
                                <div class="post-info">Sep 10, 2020 - 2 comments</div>
                            </div>
                        </article>

                    </div>

                </aside>
            </div>
        </div>
    </div>
</section>
<!--//blog-posts-->

